<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/assets/admin/css/admin.css">
  <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <title>Admin</title>
</head>
<body>
  <aside class="sidebar position-fixed top-0 left-0 overflow-auto h-100 float-left" id="show-side-navigation1">
    <i class="uil-bars close-aside d-md-none d-lg-none" data-close="show-side-navigation1"></i>
    <div class="sidebar-header d-flex justify-content-center align-items-center px-3 py-4">
      <img
           class="rounded-pill img-fluid"
           width="65"
           src="/assets/images/user.jpg"
           alt="">
      <div class="ms-2">
        <h5 class="fs-6 mb-0">
          <a class="text-decoration-none" href="#"><%= name %> </a>
        </h5>
      </div>
    </div>

    <ul class="categories list-unstyled">
      <li class="">
        <i class="uil-map-marker-home"></i><a href="/admin">Home</a>
      </li>
      <li class="">
        <i class="uil-map-marker-admin"></i><a href="/admin/group">Group</a>
      </li>
      <li class="">
        <i class="uil-map-marker-teacher"></i><a href="/admin/teacher">Teacher</a>
      </li>
      <li class="">
        <i class="uil-map-marker-course"></i><a href="/admin/course">Course</a>
      </li>
      <li class="">
        <i class="uil-map-marker-student"></i><a href="/admin/student">Student</a>
      </li>
    </ul>
  </aside>

  <section id="wrapper">
    <nav class="navbar navbar-expand-md">
      <div class="container-fluid mx-2">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">admin<span class="main-color">CRM</span></a>
          <h2 class="heading">Add new course</h2>
        </div>
      </div>
    </nav>

    <h3 class="course-heading">Kurs yaratish</h3>

    <form class="form-course" action="/admin/course/add" enctype="application/x-www-form-urlencoded" method="post" class="w-75">
      <input class="form-control" type="text" name="courseName" placeholder="Kurs nomi" required>
      <input class="form-control mt-3" type="text" name="title" placeholder="Kurs haqida" required>
      <input class="form-control mt-3" type="text" name="price" placeholder="Kurs narxi" required>

      <button class="add-btn mt-3">Add course</button>
    </form>

    <h3 class="course-heading">Mavjud kurslar</h3>

    <table class="table caption- table-dark table-hover table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Course Name</th>
          <th scope="col">Price</th>
          <th scope="col">Title</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% courses.map((course, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= course.courseName %></td>
            <td><%= course.price %></td>
            <td><%= course.title %></td>
            <td class="delete-btn"><img id="<%= course.id %>" class="delete-img" src="/assets/images/delete.png" alt="delete" width="20" height="20"></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <script src="/assets/admin/js/adminCourse.js"></script>
</body>
</html>